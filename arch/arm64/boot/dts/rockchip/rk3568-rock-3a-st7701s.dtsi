/ {
	compatible = "radxa,rock-3a", "rockchip,rk3568";

	panel_backlight: panel_backlight {
		compatible = "gpio-backlight";
		gpios = <&pca 1 0>;
		default-on;
		status = "okay";
	};
};

&video_phy1 {
	status = "okay";
};

&dsi1 {
	status = "okay";

	dsi1_panel: dsi-panel@0 {
		reg = <0x0>;
		status = "okay";
		compatible = "st7701s,480x640";
		reset-gpios = <&pca 2 0>; // fix me, no use
		backlight = <&panel_backlight>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;

				panel_in_dsi1: endpoint {
					remote-endpoint = <&dsi1_out_panel>;
				};
			};
		};
	};

	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			dsi1_out_panel: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&panel_in_dsi1>;
			};
		};
	};
};

&dsi1_in_vp0 {
	status = "disabled";
};

&dsi1_in_vp1 {
	status = "okay";
};

&route_dsi1 {
	status = "okay";
	connect = <&vp1_out_dsi1>;
};

&i2c3 {
	status = "okay";
	pinctrl-0 = <&i2c3m1_xfer>;

	pca: pca@41 {
		compatible = "nxp,pca9536";
		reg = <0x41>;
		gpio-controller;
		#gpio-cells = <2>;
		status = "okay";
		gpio-line-names =
			"0_Unused",
			"1_LCD_BL",
			"2_Unused",
			"3_LCD_RST";
	};
};
